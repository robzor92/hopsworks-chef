#!/bin/bash

if [[ $# -lt 6 || $# -gt 7 ]]; then
  echo "incorrect usage"
  echo "host op proj conda_channel install_type libname [version]"
  exit 1
fi
doas=<%= node['kagent']['user'] %>
host=$1
shift

tmpfile=$(mktemp /tmp/hopsworks-conda.XXXXXX)

ssh ${doas}@${host} "sudo <%= node['kagent']['base_dir'] %>/bin/conda.sh <%= node['conda']['user'] %> $@" 2>&1 > ${tmpfile}
RES=$?
cat $tmpfile
rm -f $tmpfile
exit $RES
